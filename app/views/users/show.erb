

<div class="spacer"></div>
<h1><%= @user.username %></h1>
<h2>Consoles: </h2>
<% if current_user.id == @user.id %>
<h5><a href="/users/<%= @user.slug %>/editconsoles">Manage consoles</a></h5>
<% end %>
<ul>
<% @user.consoles.each do |console| %>
<li><%= console.name %></li>

<% end %>
</ul>
<% games = @user.games %>
<h2>Games: </h2>
<% if current_user.id == @user.id %>
<h5><a href="/users/<%= @user.slug %>/editgames">Manage games</a></h5>
<% end %>
<% make_game_hash(games).each do |console, game_hash| %>
<h4><%= console %> games: </h4>
	<ul>
	<% game_hash.sort_by { |n| n.first }.each do |game| %>
	<li><%= game[:name] %> (<%= game[:year] %>)</li>
<% end %>
</ul>
<% end %>



