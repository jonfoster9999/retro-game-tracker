<form action="/login" method=POST class="login">
	<h3>Login: </h3>
	<p>Username: <input class="forminput" type="text" name="username" id="username"></p>
	<p>Password: <input class="forminput" type="password" name="password" id="password"></p>
	<input type="submit" value="submit">
	<h4 class="makeroom">New user? <a href="/signup">signup</a></h4>
</form>


<% if @failure %>
	<p class="failure"><%= @failure %></p>
<% end %>